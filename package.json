{
  "name": "golding",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "install:all": "pnpm -r install",
    "install:backend": "pnpm --filter golding-backend install",
    "install:frontend": "pnpm --filter golding-frontend install",
    "dev": "docker compose up --build",
    "dev:backend": "pnpm --filter golding-backend dev",
    "dev:frontend": "pnpm --filter golding-frontend dev",
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter golding-backend build",
    "build:frontend": "pnpm --filter golding-frontend build",
    "test:setup": "docker compose -f compose.test.yml up -d && sleep 5 && pnpm --filter golding-backend prisma:deploy",
    "test": "pnpm test:setup && pnpm -r test && docker compose -f compose.test.yml down",
    "test:backend": "pnpm test:setup && pnpm --filter golding-backend test && docker compose -f compose.test.yml down",
    "db:generate": "pnpm --filter golding-backend prisma:generate",
    "db:migrate": "pnpm --filter golding-backend prisma:migrate",
    "db:seed": "pnpm --filter golding-backend prisma:seed",
    "db:reset": "pnpm --filter golding-backend prisma:reset",
    "docker:dev": "docker compose up --build",
    "docker:dev:down": "docker compose down -v",
    "docker:prod:build": "docker compose -f docker-compose.prod.yml build",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "type-check": "pnpm -r type-check",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2"
  }
}
